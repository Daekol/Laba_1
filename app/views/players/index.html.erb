<p style="color: green"><%= notice %></p>

<h1>Players1</h1>

<div id="players">
  <% @players.each do |player| %>
    <%= render player %>
    <p>
    <%= link_to "Show this player", @player, class: "btn btn-primary" %>
    <%= link_to "Destroy", @player, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    </p>
  <% end %>
</div>

<%= link_to "New player", new_player_path, class: "btn btn-primary" %>
